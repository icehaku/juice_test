<div align="center" style="color: white;">
  <%= form_for(@search, url: search_submitted_path) do |f| %>
    <div class="field">
      <label>Ask for Help:</label>
      <%= f.text_field :term %>
    </div>

    <div class="actions">
      <%= f.submit "Get Help!" %>
    </div>
  <% end %>

  <%= button_to "Dashboard", search_dashbord_analytics_path, method: :get  %>
  <%= button_to "Clear Stats", clear_search_analytics_path, method: :get,
    data: { confirm: "Are you sure you want to reset stats?" }  %>
</div>
